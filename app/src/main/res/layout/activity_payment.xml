<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundpopcorn"
    tools:context="com.example.admin.cineskip.payment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:textSize="35dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:text="Please Enter Your Payment Details"
        android:textColor="@color/textcolor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Name On Card"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="20dp"
        android:textColorHint="@color/textcolor"
        android:textColor="@color/textcolor"
        android:gravity="center"
        android:background="@drawable/textboxbackground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Card Number"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="20dp"
        android:textColorHint="@color/textcolor"
        android:textColor="@color/textcolor"
        android:gravity="center"
        android:background="@drawable/textboxbackground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Expiry Date"
        android:inputType="date"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="20dp"
        android:textColorHint="@color/textcolor"
        android:textColor="@color/textcolor"
        android:gravity="center"
        android:background="@drawable/textboxbackground"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="CVV Code"
        android:inputType="number"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textSize="20dp"
        android:textColorHint="@color/textcolor"
        android:textColor="@color/textcolor"
        android:gravity="center"
        android:background="@drawable/textboxbackground"/>

    <Button
        android:id="@+id/paymentButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="25dp"
        android:textSize="20dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center_horizontal"
        android:text="Make Payment"
        android:textColorHint="@color/textcolor"
        android:background="@drawable/buttonbackground"/>

    </LinearLayout>

</RelativeLayout>




